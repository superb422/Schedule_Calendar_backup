<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!-- No Title Bar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="RobotoCalendarMonthText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#4F4F4F</item>
        <item name="fontPath">fonts/Cabin-Regular.ttf</item>
    </style>

    <style name="RobotoCalendarMonthArrow">
        <item name="android:tint">#4F4F4F</item>
    </style>

    <style name="RobotoCalendarDayOfTheWeekText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#4F4F4F</item>
        <item name="fontPath">fonts/Cabin-Regular.ttf</item>
    </style>

    <style name="RobotoCalendarDayOfTheMonthText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#4F4F4F</item>
        <item name="fontPath">fonts/Cabin-Bold.ttf</item>
    </style>



</resources>